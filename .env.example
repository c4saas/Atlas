# Server
NODE_ENV=development
PORT=3001
SESSION_SECRET=changeme

# Security
API_KEY_ENCRYPTION_KEY=
# Falls back to SESSION_SECRET if unset, but configure a dedicated 32+ character secret in production
# Leave empty to allow the first admin to enroll, then set to require a temporary password for future changes
ADMIN_ENROLLMENT_SECRET=

# Database (Drizzle)
DATABASE_URL=postgres://user:pass@localhost:5432/atlasai

# Pro (temporary until Stripe webhooks)
PRO_ACCESS_CODE=

# Provider defaults (optional server-managed credentials)
GROQ_API_KEY=

# Knowledge ingestion (optional comma-separated allowlist)
KNOWLEDGE_FETCH_HOST_ALLOWLIST=

# File storage (in-memory fallback)
FILE_STORAGE_TTL_MS=86400000
FILE_STORAGE_QUOTA_BYTES=52428800

# Billing integrations
STRIPE_PRICE_PLAN_MAP=

# S3/R2 (optional now; enables signed URLs)
S3_BUCKET=
S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Deployment controls
SKIP_DB_MIGRATIONS=false
